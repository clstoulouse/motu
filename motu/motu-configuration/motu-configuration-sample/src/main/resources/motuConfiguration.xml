<?xml version="1.0"?>
<!DOCTYPE rdf:RDF [
<!ENTITY atoll "http://purl.org/cls/atoll/ontology/individual/atoll#" >
]>
<!--
	urlSite="http://rdp2-jaune.cls.fr:8380/thredds/dodsC"
	urlSite="http://opendap.mercator-ocean.fr/thredds/dodsC"
	urlSite="http://opendap-dt.aviso.oceanobs.com/thredds/dodsC"
	urlSite="http://opendap-nrt.aviso.oceanobs.com/thredds/dodsC"
	http://opendap-dev.cls.fr:8280/thredds/dodsC/catalogConfig.xml
-->

<!-- defaultService :
	The service name when no service are specified.
-->
<!-- useProxy :
	True if a proxy is used between Motu and the opendaps, false otherwise.
	Default value is false.
-->
<!-- proxyHost :
	Name of the proxy. Ignored if useProxy is false.
	Default value is proxy.cls.fr).
-->
<!-- proxyPort :
	Name of the proxy. Ignored if useProxy is false.
	Default value is 8080).
-->
<!-- dataBlockSize :
	The number for data in Ko that can be read in the same time.
-->
<!-- maxSizePerFile :
	The number for data in Megabytes that can be written and download 
	for a Netcdf file.
-->
<!-- extractionPath :
	The absolute path where to extract (write) files.
-->
<!-- downloadHttpUrl :
	Http virtual path corresponding to the attribute <extractionPath>.
-->
<!-- httpDocumentRoot :
	Document root of the servlet server.
-->
<motuConfig defaultService="&atoll;motu-opendap-aviso" proxyLogin="john" useProxy="true"
	proxyPwd="pwd" useAuthentication="false" dataBlockSize="102400"
	maxSizePerFile="1024"
	extractionPath="C:\Java\apache-tomcat-6.0.9\webapps\ROOT\motu-file-extract"
	downloadHttpUrl="http://localhost:8080/motu-file-extract"
	extractionFilePatterns=".*\.nc$|.*\.zip$|.*\.tar$|.*\.gz$|.*\.extract$|wps_output_.*$|wps_response_.*$"
	httpDocumentRoot="http://aviso-motu.cls.fr">
	<!--=====================   CATSAT FTP ===================-->
	<configService defaultLanguage="FR" description="Ftp Catsat"
		group="CatsatFTP" httpBaseRef="http://www.cls.fr"
		name="catsatftp" veloTemplatePrefix="generic">
		<catalog name="catalogCatsatFTP.xml" type="FTP"
			urlSite="sftp://atoll:atoll@atoll-qt1.cls.fr/opt/atoll/HOA/Interface_ATOLL" />
	</configService>
	
	<!--===========================================================-->
	<!--                    motu-opendap-mercator Service          -->
	<!--===========================================================-->
	<configService defaultLanguage="FR" description="Ocean data"
		group="MercatorOpendap" httpBaseRef="http://www.mercator-ocean.fr"
		name="&atoll;motu-opendap-mercator" veloTemplatePrefix="mercator">
		<catalog name="catalog.xml" type="tds"
			urlSite="http://opendap.mercator-ocean.fr/thredds" />
	</configService>
	<!--===========================================================-->
	<!--                    motu-opendap-aviso Service          -->
	<!--===========================================================-->	
	<configService defaultLanguage="UK"
		description="Aviso Near Real Time and Delayed Time data" group="AvisoOpendap"
		httpBaseRef="http://www.aviso.oceanobs.com" name="&atoll;motu-opendap-aviso"
		veloTemplatePrefix="aviso">
		<catalog name="catalog.xml" type="tds"
			urlSite="http://opendap.aviso.oceanobs.com/thredds" />
	</configService>
	<!--===========================================================-->
	<!--                   motu-ftp-aviso Service                 -->
	<!--===========================================================-->
	<configService defaultLanguage="UK" description="Aviso Near Real Time and Delayed Time data FTP"
		group="AvisoFTP" httpBaseRef="http://www.aviso.oceanobs.com"
		name="&atoll;motu-ftp-aviso" veloTemplatePrefix="aviso">
		<catalog name="catalogAvisoFTP.xml" type="FTP"
			urlSite="sftp://atoll:atoll@atoll-qt1.cls.fr/opt/atoll/HOA/Interface_ATOLL" />
	</configService>
	<!--=====================   AVISO FTP ===================-->
	<configService defaultLanguage="UK" description="Ftp Aviso"
		group="AvisoFTP" httpBaseRef="http://www.cls.fr"
		name="avisoFTP" veloTemplatePrefix="generic">
		<catalog name="catalogAvisoFTP.xml" type="FTP"
			urlSite="sftp://atoll:atoll@atoll-qt1.cls.fr/opt/atoll/HOA/Interface_ATOLL" />
	</configService>
	
	<!--===========================================================-->
	<!--                    mercator Service          -->
	<!--===========================================================-->
	<configService defaultLanguage="FR" description="Ocean data"
		group="Mercator" httpBaseRef="http://www.mercator-ocean.fr"
		name="mercator" veloTemplatePrefix="mercator">
		<catalog name="catalog.xml" type="tds"
			urlSite="http://opendap.mercator-ocean.fr/thredds" />
	</configService>
	<!--===========================================================-->
	<!--                   aviso Service          -->
	<!--===========================================================-->	
	<configService defaultLanguage="UK"
		description="Aviso Near Real Time and Delayed Time data" group="Aviso"
		httpBaseRef="http://www.aviso.oceanobs.com" name="aviso"
		veloTemplatePrefix="aviso">
		<catalog name="catalog.xml" type="tds"
			urlSite="http://opendap.aviso.oceanobs.com/thredds" />
	</configService>
	
    <!--===========================================-->
	<!--                     CatSat  TDS            -->
	<!--===========================================-->
	<configService defaultLanguage="FR" description="Catsat"
		group="Catsat" httpBaseRef="http://www.cls.fr" name="Catsat"
		veloTemplatePrefix="cls">
		<catalog name="catalog.xml" type="TDS"
			urlSite="http://catsat-data1.cls.fr:43080/thredds" />
	</configService>
	
	<!--===========================================================-->
	<!--                   OpendapAuth Service          -->
	<!--===========================================================-->	
	<configService defaultLanguage="FR"
		description="Test CASified Opendap " group="opendapauth"
		httpBaseRef="http://www.aviso.oceanobs.com" name="opendapauth"
		veloTemplatePrefix="cls">
		<catalog name="catalog.xml" type="tds"
			urlSite="http://atoll-dev.cls.fr:43080/thredds" casAuthentification="true" />
	</configService>
	<!--===========================================-->
	<!--      QUEUE SERVER CONFIG      -->
	<!--===========================================-->

	<queueServerConfig maxPoolAnonymous="1">
		<queues id="queue1" description="light queue">
			<maxThreads>10</maxThreads>
			<maxPoolSize>5</maxPoolSize>
			<dataThreshold>30.0</dataThreshold>
			<lowPriorityWaiting>1</lowPriorityWaiting>

		</queues>
		<queues id="queue2" description="bulk queue">
			<dataThreshold>512</dataThreshold>
			<lowPriorityWaiting>2</lowPriorityWaiting>

		</queues>
	</queueServerConfig>

</motuConfig>

