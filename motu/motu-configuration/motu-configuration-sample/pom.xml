<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>cls.atoll.motu</groupId>
		<artifactId>motu-parent</artifactId>
		<version>2.1.3-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>
	
    <groupId>cls.atoll.motu.configuration</groupId>
    <artifactId>motu-configuration-sample</artifactId>
    <version>2.1.3-SNAPSHOT</version>
    <packaging>war</packaging>
	
    <name>Motu Configuration Cartridge Sample</name>
    <description>This package holds a sample configuration cartridge for motu.</description>
    
    <dependencies>
        <dependency>
            <groupId>cls.atoll.motu.configuration</groupId>
			<artifactId>motu-configuration-common</artifactId>
			<version>2.1.3-SNAPSHOT</version>
			<classifier>delivery</classifier>
			<type>zip</type>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>cls.atoll.motu.configuration</groupId>
                            <artifactId>motu-configuration-common</artifactId>
							<classifier>delivery</classifier>
							<type>zip</type>
							<excludes>
							  <exclude>WEB-INF/web.xml</exclude>
							</excludes>                            
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>