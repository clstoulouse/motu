	<!-- Mapping Servlet -->
	<servlet>
		<display-name>Motu</display-name>
		<servlet-name>Motu</servlet-name>
		<servlet-class>
			fr.cls.atoll.motu.web.servlet.MotuServlet
		</servlet-class>
