    <groupId>cls.atoll.motu.library</groupId>
    <artifactId>motu-library-inventory</artifactId>
    <packaging>jar</packaging>
    <version>2.1.2-SNAPSHOT</version>
    <name>Motu Library Misc</name>
    <description>This package holds the inventory library of the Motu server.</description>
    <scm>
        <connection>scm:svn:http://gforge.cls.fr/svn/atoll/trunk/motu/motu-library/motu-library-inventory</connection>
    </scm>
    <issueManagement>
        <system>JIRA</system>
        <url>http://jira.cls.fr:8080/browse/ATOLL</url>
    </issueManagement>
    <distributionManagement>
        <repository>
            <id>repo</id>
            <name>CLS Entreprise Release Repository</name>
            <url>http://mvnrepo.cls.fr:8081/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>repo</id>
            <name>CLS Entreprise Snapshot Repository</name>
            <url>http://mvnrepo.cls.fr:8081/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>
    <properties>
        <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
        <jdk.source.version>1.6</jdk.source.version>
        <jdk.source.encoding>ISO-8859-1</jdk.source.encoding>
        <dependencies.version.slf4j>1.5.8</dependencies.version.slf4j>
        <dependencies.version.spring>2.5.6</dependencies.version.spring>
        <dependencies.version.slf4j>1.5.8</dependencies.version.slf4j>
    </properties>
    <licenses>
        <license>
            <name>GNU Lesser General Public License (LGPL)</name>
            <url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
