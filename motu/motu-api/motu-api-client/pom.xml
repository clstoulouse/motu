		<repository>
			<id>java.net</id>
			<name>Java Dev Repository</name>
			<url>http://download.java.net/maven/2</url>			
		</repository>
		<repository>
			<id>cls-3rdparty</id>
			<name>CLS 3rd Party repository</name>
			<url>http://mvnrepo.cls.fr:8081/nexus/content/repositories/thirdparty/</url>
