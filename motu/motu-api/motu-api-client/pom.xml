    <dependencies>
        <dependency>
            <groupId>cls.atoll.motu.library</groupId>
            <artifactId>motu-library-misc</artifactId>
            <version>2.1.0</version>
        </dependency>
       <!-- 
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
