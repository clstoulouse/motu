			</snapshots>
		</repository>
        <repository>
            <id>geotoolkit</id>
            <name>Geotoolkit artifacts</name>
            <url>http://maven.geotoolkit.org</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>		
		<repository>
            <id>geotools</id>
            <name>Geotools release repository</name>
