        </repository>
        <repository>
            <id>jena dev repo</id>
            <name>Jena developpmenent repository</name>
            <url>http://openjena.org/repo-dev/</url>
        </repository>
		<repository>
			<id>jboss</id>
			<name>JBoss Repository</name>
			<url>http://repository.jboss.com/maven2</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>      
